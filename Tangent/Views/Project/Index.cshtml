@model IEnumerable<Tangent.Models.Project>

@{
    ViewBag.Title = "Projects";
}

<h2>Index</h2>
@ViewBag.Token
<p style="font-weight:bold;">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr style="border-bottom: 1px solid rgba(0,0,0,0.2);">
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.start_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.end_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.is_billable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.is_active)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="border-bottom: 1px solid rgba(0,0,0,0.2);">
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.start_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.end_date)
        </td>
        <td>
            @if (item.is_billable == true)
            {
                <span>&#x2714;</span>
            }
            else
            {
                <span>&#x2716;</span>
            }
        </td>
        <td>
            @if (item.is_active == true)
            {
                <span>&#x2714;</span>
            }
            else
            {
                <span>&#x2716;</span>
            }
        </td>
        <td>
            @*<a href="@Url.Action("Edit", "Project")">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a> | 
            <a href="@Url.Action("Edit", "Delete")">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>*@ 
            @Html.ActionLink("Edit", "Edit", new { projectId=item.pk }) |  @Html.ActionLink("Delete", "Delete", new { projectId = item.pk }) | @Html.ActionLink("Project Tasks", "ProjectTask", new { projectId = item.pk })
        </td>
    </tr>
}

</table>
